<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nos Clients</title>
    <link rel="stylesheet" href="/css/client.css" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="panel pricing-table">
      <div class="pricing-plan">
        <% if(customer.length < 1){ %>
        <h1>aucun résultat exist</h1>
        <%} else{ %>
        <div class="push">
          <div class="row">
            <div class="col-md-3 col-sm-3">
              <h4>Client</h4>
            </div>
            <div class="col-md-3 col-sm-3">
              <h4>Voiture</h4>
            </div>
            <div class="col-md-3 col-sm-3">
              <h4>Telephon</h4>
            </div>
            <div class="col-md-3 col-sm-3">
              <h4>Céllulaire</h4>
            </div>
          </div>

          <% for(let cust of customer){ %>
          <div class="row">
            <div class="col-md-3 col-sm-3">
              <a href="/home/<%= cust._id %> "><%= cust.client%></a>
            </div>
            <div class="col-md-3 col-sm-3"><%= cust.car%></div>
            <div class="col-md-3 col-sm-3"><%= cust.tel%></div>
            <div class="col-md-3 col-sm-3"><%= cust.cellulaire%></div>
          </div>
          <% } } %>
        </div>
        <a class="Stylebtn" href="/">Back</a>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
